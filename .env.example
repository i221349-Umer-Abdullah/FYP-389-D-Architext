# Architext Environment Configuration
# Copy this file to .env and customize for your environment

# Environment: development, staging, production
ARCHITEXT_ENV=development

# Server Configuration
ARCHITEXT_HOST=0.0.0.0
ARCHITEXT_PORT=7860
ARCHITEXT_DEBUG=true

# Model Settings
ARCHITEXT_MODEL=shap-e
ARCHITEXT_MODEL_CACHE=./models
ARCHITEXT_QUALITY=medium
ARCHITEXT_GUIDANCE_SCALE=15.0
ARCHITEXT_MAX_STEPS=128

# Performance
ARCHITEXT_USE_GPU=true
ARCHITEXT_MAX_BATCH=1
ARCHITEXT_MEMORY_LIMIT=8

# Gradio Settings
ARCHITEXT_SHARE=true
ARCHITEXT_THEME=architext_wood

# Authentication (optional)
# Format: username:password or user1:pass1,user2:pass2
# ARCHITEXT_AUTH=admin:secretpass

# Logging
ARCHITEXT_LOG_LEVEL=INFO
ARCHITEXT_LOG_MAX_BYTES=10485760
ARCHITEXT_LOG_BACKUPS=5

# Security
ARCHITEXT_ENABLE_CORS=false
# ARCHITEXT_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ARCHITEXT_MAX_FILE_SIZE=50

# Feature Flags
ARCHITEXT_ANALYTICS=false
ARCHITEXT_RATE_LIMIT=false
ARCHITEXT_RATE_LIMIT_RPM=10
